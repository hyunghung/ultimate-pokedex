<!DOCTYPE html>
<html>
<head>
  <title>Login Page</title>
</head>
<body>
  <div class="row">
    <div class="col-md-6">
      <h2>Login</h2>
    
      <form class="form login-form" method="POST" action="/login">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="email" id="email-login" name="email" required />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" name="password" required />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
      </form>

      <p class="error-message" style="color: red;"></p>
    </div>
    <div class="col-md-6">
      <h2>Signup</h2>
    
      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">Name:</label>
          <input class="form-input" type="text" id="name-signup" required />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="email" id="email-signup" required />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" required />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/login.js"></script>
</body>
</html>
